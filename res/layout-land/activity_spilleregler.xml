<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spilleregler"
    android:background="@drawable/green_blackboard"
    android:paddingLeft="@dimen/tilSideForTavle"
    android:paddingRight="@dimen/tilSideForTavle" >

    <TextView
        android:id="@+id/overskrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/underTavle"
        android:textSize="@dimen/h1"
        android:textStyle="bold"
        android:text="@string/lesRegler" />
    <TextView 
        android:id="@+id/reglementet"
        android:layout_below="@id/overskrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/p"
        android:text="@string/reglementet"
        android:maxLines="8"
        android:scrollbars="vertical"/>

</RelativeLayout>